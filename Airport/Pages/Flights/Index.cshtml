@page "/"
@model Airport.Pages.Flights.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Flight Departure / Arrival :
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DepartureSort">
                @Html.DisplayNameFor(model => model.Flight[0].Departure)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.ArrivalSort">
                @Html.DisplayNameFor(model => model.Flight[0].Arrival)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].FlightDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].FlightDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].Airline.AirlineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight[0].FlightCategories)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FlightD.Flights) {
    string selectedRow = "";
        if (item.ID == Model.FlightID)
                    {
            selectedRow = "table-success";
           }
        <tr class="@selectedRow">
        
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightDate)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Airline.AirlineName)
                </td>
                <td>
                    @{
                        foreach (var category in item.FlightCategories)
                        {
                            @category.Category.ID @: @category.Category.CategoryName <br />
                        }
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
